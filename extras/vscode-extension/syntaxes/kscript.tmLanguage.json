{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "kscript",
	"scopeName": "source.kscript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#supports"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.block.kscript",
					"begin": "^\"\"\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.kscript"
						}
					},
					"end": "\"\"\"",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.comment.kscript"
						}
					}
			},{
				"name": "comment.block.kscript",
					"begin": "^'''",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.kscript"
						}
					},
					"end": "'''",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.comment.kscript"
						}
					}
			},{
				"name": "comment.line.number-sign.kscript",
				"match": "#.*"
			}]
		},

		"keywords": {
			"patterns": [{
				"name": "keyword.control.kscript",
				"match": "\\b(if|else|elif|while|for|assert)"
			},{
				"name": "keyword.builtin.kscript",
				"match": "\\b(import|self|this|class|typeof)"
			},{
				"name": "keyword.operator.kscript",
				"match": "(\\!|\\@|\\$|\\%|\\^|\\*|\\-|\\+|\\||\\:|\\=\\=|\\=|\\|\\||\\&\\&)"
			}]
		},

		"supports": {
			"patterns": [{
				"name": "support.function.kscript",
				"match": "\\b(TTT)!"
			}]
		},
		
		"strings": {
			"patterns": [{
				"name": "string.quoted.double.kscript",
				"begin": "\"",
				"end": "\"",
				"patterns": [
					{
						"name": "constant.character.escape.kscript",
						"match": "\\\\."
					}
				]
			}, {
				"name": "string.quoted.single.kscript",
				"begin": "'",
				"end": "'",
				"patterns": [
					{
						"name": "constant.character.escape.kscript",
						"match": "\\\\."
					}
				]
			}]
		},

		"constants": {
			"patterns": [{
				"name": "constant.numeric.integer.kscript",
				"match": "(\\.[0-9]+|[0-9]+(\\.[0-9]*)?)"
			}]
		},

		"variables": {
			"patterns": [{
				"name": "variable.other.kscript",
				"match": "[a-zA-Z][a-zA-Z_]*"
			}]
		}

	}
}